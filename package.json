{
  "name": "gb-local-node-server",
  "version": "0.1.0",
  "description": "Local node server on each GB",
  "main": "index.js",
  "scripts": {
    "dev": "export DB_NAME=DEV && tsc-watch --onSuccess \"node ./dist/server.js\"",
    "dev:test": "export DB_NAME=TEST && tsc-watch --onSuccess \"node ./dist/server.js\"",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:fix": "tslint --fix -c tslint.json 'src/**/*.ts'",
    "pretty-quick": "pretty-quick",
    "test": "export DB_NAME=TEST && tsc && mocha **/*.spec.js",
    "test:dev": "tsc-watch --onSuccess \" mocha **/*.spec.js\"",
    "test:coverage": "tsc && nyc --reporter=lcov --reporter=text-summary mocha **/*.spec.js",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "release": "release-it && auto-changelog"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GarbageBytes/gb-local-node-server.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/GarbageBytes/gb-local-node-server/issues"
  },
  "homepage": "https://github.com/GarbageBytes/gb-local-node-server#readme",
  "dependencies": {
    "@types/chai": "^4.2.7",
    "@types/config": "0.0.36",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "@types/supertest": "^2.0.8",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "compression": "^1.7.4",
    "config": "^3.2.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^5.0.0-alpha.7",
    "express-validator": "^2.21.0",
    "jwt-simple": "^0.5.6",
    "mocha": "^3.2.0",
    "moment": "^2.24.0",
    "mongoose": "^5.8.3",
    "passport": "^0.4.1",
    "passport-jwt": "^2.2.1",
    "roslib": "^1.0.1",
    "rxjs": "^6.5.3",
    "socket.io": "^2.4.0",
    "socket.io-client": "^2.3.0",
    "supertest": "^4.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/express-validator": "^3.0.0",
    "@types/jwt-simple": "^0.5.33",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.35",
    "@types/node": "^12.12.22",
    "@types/passport": "^1.0.2",
    "@types/passport-jwt": "^3.0.3",
    "@types/superagent": "^4.1.4",
    "coveralls": "^3.0.9",
    "husky": "^3.1.0",
    "istanbul": "^1.1.0-alpha.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "tsc-watch": "^4.0.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.4",
    "vinyl-fs": "^3.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run lint",
      "pre-push": "npm run test"
    }
  },
  "nyc": {
    "exclude": [
      "**/errorHandlers.ts",
      "**/ErrorHandler.ts",
      "**/httpErrors.ts",
      "**/baseRepository.ts",
      "**/*.spec.ts"
    ]
  }
}
